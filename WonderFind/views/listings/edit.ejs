<%- layout("/layouts/boilerplate") %>
<body>
  <div class="container my-2">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" enctype="multipart/form-data" novalidate>
          <h2 class="mb-4 text-center">Update Listing</h2>

          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              id="title"
              name="listing[title]"
              value="<%= listing.title %>"
              type="text"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a title.</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              id="description"
              name="listing[description]"
              rows="4"
              class="form-control w-100"
              required
            ><%= listing.description %></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a description (minimum 20 characters).</div>
          </div>

          <!-- Image Section -->
          <div class="mb-4 border p-3 rounded">
            <h5 class="mb-3">Current Image</h5>
            <div class="text-center">
              <img src="<%= originalImage %>" class="img-fluid rounded" style="width: 100%; height: 45vh; object-fit: cover;" alt="Current Listing Image">
            </div>
            <div class="mt-3">
              <label for="image" class="form-label">Upload New Image (Optional)</label>
              <input
                id="image"
                name="listing[image]"
                type="file"
                class="form-control"
                accept="image/*"
              />
              <div class="form-text">Leave blank to keep current image</div>
            </div>
          </div>

          <div class="row mb-3">
            <!-- Price -->
            <div class="col-md-6 mb-3 mb-md-0">
              <label for="price" class="form-label">Price</label>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <input
                  id="price"
                  name="listing[price]"
                  value="<%= listing.price %>"
                  type="number"
                  min="0"
                  step="0.01"
                  class="form-control"
                  required
                />
              </div>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a valid price.</div>
            </div>

            <!-- Location -->
            <div class="col-md-6">
              <label for="location" class="form-label">Location</label>
              <input
                id="location"
                name="listing[location]"
                value="<%= listing.location %>"
                type="text"
                class="form-control"
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide a location.</div>
            </div>
          </div>

          <!-- Country -->
          <div class="mb-4">
            <label for="country" class="form-label">Country</label>
            <input
              id="country"
              name="listing[country]"
              value="<%= listing.country %>"
              type="text"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please specify a country.</div>
          </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-warning py-2">Update Listing</button>
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="/js/script.js"></script>
</body>