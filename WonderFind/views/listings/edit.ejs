<%- layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" enctype="multipart/form-data" novalidate>
        <h2 class="my-2">Update Details</h2>

        <!-- Title -->
        <div class="my-1">
          <label for="title" class="form-label">Title</label>
          <input
            id="title"
            name="listing[title]"
            value="<%= listing.title %>"
            type="text"
            class="form-control"
            
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a title.</div>
        </div>

        <!-- Description -->
        <div class="my-1">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            name="listing[description]"
            rows="2"
            cols="23"
            class="form-control"
            required
          ><%= listing.description %></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a description.</div>
        </div>
      <div class="my-2">
  <h5>Original Listing Image</h5>
  <img src="<%= originalImage %>" class="img-thumbnail" style="width: 350px; height: 250px; object-fit: cover;" alt="Original Listing Image">

</div>

        <div class="my-1">
          <label for="image" class="form-label">Upload New Image</label>
          <input
            id="image"
            name="listing[image]"
            type="file"
            class="form-control"
          />
        </div>

        <div class="row">
          <!-- Price -->
          <div class="my-1 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              id="price"
              name="listing[price]"
              value="<%= listing.price %>"
              type="number"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>

          <!-- Location -->
          <div class="my-1 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input
              id="location"
              name="listing[location]"
              value="<%= listing.location %>"
              type="text"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a location.</div>
          </div>
        </div>

        <!-- Country -->
        <div class="my-1">
          <label for="country" class="form-label">Country</label>
          <input
            id="country"
            name="listing[country]"
            value="<%= listing.country %>"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please specify a country.</div>
        </div>

        <button class="btn btn-warning my-2">Edit</button>
      </form>
    </div>
  </div>
<script src="/js/script.js"></script>