<%- layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 1.6rem;
  }

  .filter {
    text-align: center;
    margin-top: 15px;
    opacity: 0.7;
    position: relative;
    cursor: pointer;
  }

  .filter:hover {
    opacity: 1;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .filter::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 10%;
    width: 80%;
    height: 2px;
    background-color: #000;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease-in-out;
  }

  .filter:hover::after {
    transform: scaleX(1);
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    margin-top: 1rem;
    border: 1px solid rgb(112, 111, 111);
    border-radius: 10px;
    height: 2.5rem;
    padding: 0.4rem;
  }

  /* Responsive filter toggle */
  @media (max-width: 991.98px) {
    #filters {
      display: none;
    }

    #filters.show {
      display: flex;
    }
  }
</style>

<!-- FILTER TOGGLE BUTTON -->
<button id="filterToggleBtn" class="btn btn-outline-secondary d-lg-none mt-2 mb-3">
  <i class="fa-solid fa-sliders"></i> Filters
</button>

<!-- FILTERS SECTION -->
<div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-sun"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-chess-rook"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-sailboat"></i></div>
    <p>Boats</p>
  </div>

  <!-- TAX TOGGLE -->
  <div class="tax-toggle ms-auto px-3">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
    </div>
  </div>
</div>

<!-- LISTINGS -->
<h2 class="my-1">Explore Listings</h2>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1">
  <% for(let listings of allListings){ %>
  <a href="/listings/<%= listings._id %>" class="list-link">
    <div class="card mb-5 listing-card">
      <img
        src="<%= listings.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem; object-fit: cover;"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listings.title %></b><br>
          â‚¹<%= listings.price.toLocaleString("en-IN") %> / night
          <i class="tax-info">&nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<!-- SCRIPT -->
<script>
  // Toggle tax info display
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      if (info.style.display === "none" || info.style.display === "") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });

  // Toggle filters on small/medium screens
  const filterToggleBtn = document.getElementById("filterToggleBtn");
  const filtersContainer = document.getElementById("filters");
  filterToggleBtn.addEventListener("click", () => {
    filtersContainer.classList.toggle("show");
  });
</script>
