<%- layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="my-4">Listing Details</h2>

      <div class="card mb-4">
        <div class="row ">
          <div class="col-md-5 mb-sm-4">
            <img src="<%= listing.image.url %>" class="img-fluid rounded h-100 w-100 object-fit-cover" alt="Listing Image" />
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <h4 class="card-title mb-3"><%= listing.title %></h4>
              <p class="card-text"><%= listing.description %></p>
              <p><strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
              <p><strong>Location:</strong> <%= listing.location %></p>
              <p><strong>Country:</strong> <%= listing.country %></p>

              <div class="d-flex gap-2 mt-4">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">Edit</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                  <button class="btn btn-danger" type="submit">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</body>
